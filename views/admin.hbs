<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1">Admin Panel</span>
    <a class="btn btn-outline-light" href="/">Bosh sahifa</a>
  </div>
</nav>

<div class="container py-4">
  <div class="row g-3">
    <div class="col-6 col-lg-3">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <div class="text-muted small">Foydalanuvchilar</div>
          <div class="fs-3 fw-bold">{{metrics.totalUsers}}</div>
        </div>
      </div>
    </div>
    <div class="col-6 col-lg-3">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <div class="text-muted small">Bugungi</div>
          <div class="fs-3 fw-bold">{{metrics.todayUsers}}</div>
        </div>
      </div>
    </div>
    <div class="col-6 col-lg-3">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <div class="text-muted small">Bounce Rate</div>
          <div class="fs-3 fw-bold">{{metrics.bounceRate}}%</div>
        </div>
      </div>
    </div>
    <div class="col-6 col-lg-3">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <div class="text-muted small">O‘rtacha sessiya</div>
          <div class="fs-3 fw-bold">{{metrics.avgSession}}</div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="m-0">Yangi ro‘yxatdan o‘tganlar</h5>
          </div>
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Ism</th>
                  <th>Email</th>
                  <th>Sana</th>
                </tr>
              </thead>
              <tbody>
                {{#if submissions.length}}
                  {{#each submissions}}
                    <tr>
                      <td>{{inc @index}}</td>
                      <td>{{this.name}}</td>
                      <td>{{this.email}}</td>
                      <td>{{this.createdAt}}</td>
                    </tr>
                  {{/each}}
                {{else}}
                  <tr>
                    <td colspan="4" class="text-center text-muted">Hozircha ma’lumot yo‘q</td>
                  </tr>
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




